---
import { Image } from "astro:assets";
// import Hamburger from "../components/Hamburger.astro";
// import Menu from "../components/Menu.astro";
// import Social from "../components/Social.astro";
import logoIcon from "../assets/logoIcon.svg";
import logoText from "../assets/logoText.svg";
import bicycleText from "../assets/bicycleText.svg";
---

<header class="border-b-2 border-yellow-500 bg-black">
  <div class="flex justify-between">
    <a class="flex h-20 gap-3" href="/">
      <Image
        src={logoIcon}
        alt="Pink Puffin Icon"
        class="ml-2.5 mt-2.5 h-14 w-14"
      />
      <div class="flex w-32 flex-none flex-col justify-center gap-3">
        <Image src={logoText} alt="Pink Puffin" class="w-full" />
        <Image src={bicycleText} alt="bicycles" class="w-full pl-0.5" />
      </div>
    </a>
    <div id="sidebar" class="absolute right-0 flex flex-col items-end">
      <button
        id="hamburger"
        class="m-5 h-10 w-10 border border-dotted border-white text-3xl font-bold text-white"
        >=</button
      >
      <nav
        style="display:none"
        id="menu"
        class="w-52 flex-1 flex-col items-end bg-black/90 text-xl font-light text-white"
      >
        <a class="menu-link flex flex-1 items-center pr-4" href="/custom">
          Custom Bikes</a
        >
        <a class="menu-link flex flex-1 items-center pr-4" href="/brands/"
          >Bike Brands</a
        >
        <a class="menu-link flex flex-1 items-center pr-4" href="/kidsbikes/"
          >Kids' Bikes</a
        >
        <a class="menu-link flex flex-1 items-center pr-4" href="/fitting/"
          >Bike Fitting</a
        >
        <a class="menu-link flex flex-1 items-center pr-4" href="/services/"
          >Services</a
        >
        <a class="menu-link flex flex-1 items-center pr-4" href="/about/"
          >About</a
        >
        <a class="menu-link flex flex-1 items-center pr-4" href="/contact/"
          >Contact</a
        >
        <!-- <Social /> -->
      </nav>
    </div>
  </div>
</header>
