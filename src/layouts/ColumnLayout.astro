---
import { Image } from "astro:assets";
const { images } = Astro.props;
---

<div class="flex flex-col">
  <div class="h-4 flex-none bg-gradient-to-r from-black to-[#F8D1D1]"></div>
  <div class="grid grid-cols-1">
    <section class="flex flex-col gap-4 bg-[#F8D1D1] p-4">
      <slot />
    </section>
    <section class="flex flex-col gap-2 bg-black p-4">
      {
        images.map((element) => (
          <Image src={element.image} alt={element.alt} class="min-w-full" />
        ))
      }
    </section>
  </div>
  <div class="h-4 flex-none bg-gradient-to-r from-black to-[#F8D1D1]"></div>
</div>
