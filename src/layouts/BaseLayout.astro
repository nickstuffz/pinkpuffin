---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { pageTitle } = Astro.props;
---

<html lang="en" class="m-0 min-h-svh w-full min-w-72 bg-black p-0">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/src/assets/logoIcon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="m-0 flex h-full w-full flex-col p-0">
    <Header />
    <main class="grow">
      <slot />
    </main>
    <Footer />
    <script src="../scripts/hamburgerScript.js"></script>
  </body>
</html>
