---
import BaseLayout from "../layouts/BaseLayout.astro";
import ColumnLayout from "../layouts/ColumnLayout.astro";
import { getEntry } from "astro:content";

const brands = await getEntry("markdown", "brands");
const { Content } = await brands.render();

const pageTitle = brands.data.title;
const images = brands.data.images;
---

<BaseLayout pageTitle={pageTitle}>
  <ColumnLayout images={images} pageTitle={pageTitle}>
    <Content />
  </ColumnLayout>
</BaseLayout>
