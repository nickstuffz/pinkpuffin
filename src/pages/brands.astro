---
import BaseLayout from "../layouts/BaseLayout.astro";
import ColumnLayout from "../layouts/ColumnLayout.astro";
import { Content, frontmatter } from "../markdown/brands.md";
import image1 from "../assets/sageLogo.webp";
import image2 from "../assets/sageBike.webp";
import image3 from "../assets/fiftyOneLogo.webp";
import image4 from "../assets/fiftyOneBike.webp";
import image5 from "../assets/colnagoLogo.webp";

const images = [
  { image: image1, alt: "Sage logo" },
  { image: image2, alt: "Sage bicycle" },
  { image: image3, alt: "FiftyOne logo" },
  { image: image4, alt: "FiftyOne bicycle" },
  { image: image5, alt: "Colnago logo" },
];
---

<BaseLayout pageTitle={frontmatter.title}>
  <ColumnLayout images={images}>
    <Content />
  </ColumnLayout>
</BaseLayout>
