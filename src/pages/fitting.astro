---
import BaseLayout from "../layouts/BaseLayout.astro";
import ColumnLayout from "../layouts/ColumnLayout.astro";
import { Content, frontmatter } from "../markdown/fitting.md";
import image1 from "../assets/paragonFitStudioLogo.webp";
import image2 from "../assets/vitruvianMan.webp";

const images = [
  { image: image1, alt: "Paragon Fit Studio logo" },
  { image: image2, alt: "vitruvian man" },
];
---

<BaseLayout pageTitle={frontmatter.title}>
  <ColumnLayout images={images}>
    <Content />
  </ColumnLayout>
</BaseLayout>
