---
import BaseLayout from "../layouts/BaseLayout.astro";
import ColumnLayout from "../layouts/ColumnLayout.astro";
import { Content } from "../content/markdown/fitting.md";
import { getEntry } from "astro:content";

const fitting = await getEntry("markdown", "fitting");
const pageTitle = fitting.data.title;
const images = fitting.data.images;
---

<BaseLayout pageTitle={pageTitle}>
  <ColumnLayout images={images} pageTitle={pageTitle}>
    <Content />
  </ColumnLayout>
</BaseLayout>
