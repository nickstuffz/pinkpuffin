---
import BaseLayout from "../layouts/BaseLayout.astro";
import ColumnLayout from "../layouts/ColumnLayout.astro";
import { Content } from "../content/markdown/about.md";
import { getEntry } from "astro:content";

const about = await getEntry("markdown", "about");
const pageTitle = about.data.title;
const images = about.data.images;
---

<BaseLayout pageTitle={pageTitle}>
  <ColumnLayout images={images} pageTitle={pageTitle}>
    <Content />
  </ColumnLayout>
</BaseLayout>
