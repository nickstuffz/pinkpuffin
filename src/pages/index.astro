---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import shopBike from "../assets/shopBike.webp";
import ppText from "../assets/ppText.svg";
import bicyclesText from "../assets/bicyclesText.svg";
const pageTitle = "PinkPuffinBicycles";
---

<BaseLayout pageTitle={pageTitle}>
  <div
    class="relative m-2 flex max-w-screen-2xl grow flex-col items-center justify-center"
  >
    <div
      id="modal"
      class="absolute z-10 flex h-2/3 min-h-72 w-5/6 flex-col items-center justify-around gap-4 bg-black/60 px-2 py-4 transition-opacity duration-500 sm:gap-6 md:gap-9 md:px-4 md:py-6 md:hover:opacity-0 lg:px-6 lg:py-8 xl:py-10"
    >
      <div class="flex w-full flex-col items-center justify-between gap-5">
        <Image
          src={ppText}
          alt="Pink Puffin text"
          loading="eager"
          class="w-4/5"
        />
        <Image
          src={bicyclesText}
          alt="bicycles text"
          loading="eager"
          class="w-3/5"
        />
      </div>
      <div
        class="text-md flex grow flex-col justify-between text-center font-thin text-white sm:text-lg md:text-2xl lg:text-3xl xl:text-5xl"
      >
        <p>
          San Francisco&#39;s premier bicycle shop specializing in quality
          bicycle repair and service with exquisite stock and custom bicycles.
          Experience it here.
        </p>
        <a href="mailto: pinkpuffinbicycles@gmail.com" target="_blank"
          >pinkpuffinbicycles@gmail.com</a
        ><a href="tel:4159373553" target="_blank">415-937-3553</a>
      </div>
    </div>

    <Image
      src={shopBike}
      alt="Pink Puffin shop bicycle"
      loading="eager"
      class="relative grow object-cover"
    />
  </div>
</BaseLayout>
