---
import BaseLayout from "../layouts/BaseLayout.astro";
import ColumnLayout from "../layouts/ColumnLayout.astro";
import { getEntry } from "astro:content";

const kidsbikes = await getEntry("markdown", "kidsbikes");
const { Content } = await kidsbikes.render();

const pageTitle = kidsbikes.data.title;
const images = kidsbikes.data.images;
---

<BaseLayout pageTitle={pageTitle}>
  <ColumnLayout images={images} pageTitle={pageTitle}>
    <Content />
  </ColumnLayout>
</BaseLayout>
