---
import BaseLayout from "../layouts/BaseLayout.astro";
import ColumnLayout from "../layouts/ColumnLayout.astro";
import { Content } from "../content/markdown/custom.md";
import { getEntry } from "astro:content";

const custom = await getEntry("markdown", "custom");
const pageTitle = custom.data.title;
const images = custom.data.images;
---

<BaseLayout pageTitle={pageTitle}>
  <ColumnLayout images={images} pageTitle={pageTitle}>
    <Content />
  </ColumnLayout>
</BaseLayout>
